<Window x:Class="ColorSelector.ScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorSelector"
        mc:Ignorable="d"
        Title="ScreenWindow" Height="300" Width="300" AllowsTransparency="True" WindowStyle="None" Background="#01000000"
        Name="Window" WindowState="Maximized" MouseDown="PickColor">

    <Canvas Name="WindowCanvas" MouseMove="Canvas_MouseMove" Background="Transparent">
        <Ellipse Name="Magnifier"
                 MouseEnter="Magnifier_MouseOver" 
                 StrokeThickness="2" Stroke="Black" Height="48" Width="48" Margin="0" 
                 Canvas.Left="10" Canvas.Top="10">
        </Ellipse>
    </Canvas>
</Window>